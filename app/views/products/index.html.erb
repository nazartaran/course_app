<h1 class="text-center">Products</h1>
<div class="card-deck">
  <% @products.each do |product| %>
    <div class="card">
      <img class="card-img-top" src="http://www.nsrcel.org/wp-content/uploads/2018/01/product.png" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= product.title %></h5>
        <p class="card-text">Price: <%= number_to_currency(product.price, unit: 'â‚´') %></p>
        <p class="card-text"><small class="text-muted">Last updated <%= time_ago_in_words(product.updated_at) %> ago</small></p>
        <%= link_to 'Edit', edit_product_path(id: product.id), class: 'btn btn-info float-right' %>
      </div>
    </div>
  <% end %>
</div>
<br />
<%= link_to 'Add Product', new_product_path, class: 'btn btn-success float-right' %>
